<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="320dp"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_black">

    <include
        android:id="@+id/pb_loading"
        android:visibility="gone"
        layout="@layout/progressbar_loading" />

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm khu vực"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_span1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Name: "
        android:gravity="center|left"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/et_name"
        android:layout_alignBottom="@+id/et_name"
        android:layout_below="@+id/txt_header"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_header"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/txt_span1"
        android:textColor="#FFFFFF"
        android:background="#11000000"
        android:textColorHint="#FFB3B3B3"
        android:inputType="text"
        android:hint="Nhập tên khu vực" />

    <TextView
        android:id="@+id/txt_span2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/et_devicetype"
        android:layout_alignBottom="@+id/et_devicetype"
        android:text="Device Type: "
        android:gravity="center|left"
        android:layout_below="@+id/txt_span1"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_devicetype"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_name"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:textColor="#FFFFFF"
        android:background="#11000000"
        android:textColorHint="#FFB3B3B3"
        android:inputType="text"
        android:layout_toRightOf="@+id/txt_span2"
        android:hint="Nhập kiểu thiết bị" />

    <TextView
        android:id="@+id/txt_span3"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/et_deviceid"
        android:layout_alignBottom="@+id/et_deviceid"
        android:text="Device Id: "
        android:gravity="center|left"
        android:layout_below="@+id/txt_span2"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_deviceid"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/et_devicetype"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:textColor="#FFFFFF"
        android:background="#11000000"
        android:textColorHint="#FFB3B3B3"
        android:inputType="text"
        android:layout_toRightOf="@+id/txt_span3"
        android:hint="Nhập id thiết bị" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_deviceid"
        android:background="@drawable/button_radius"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:text="Add"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_add"
        android:layout_alignBottom="@+id/btn_add"
        android:layout_toRightOf="@+id/btn_add"
        android:background="@drawable/button_radius"
        android:layout_marginLeft="40dp"
        android:textSize="12sp"
        android:text="Close"/>

</RelativeLayout>