<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="320dp"
    android:focusableInTouchMode="true"
    android:background="@drawable/background_black">

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhập thông tin"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_ask"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Nhập thông tin mới tương ứng"
        android:gravity="center|left"
        android:paddingLeft="18dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txt_header"
        android:textColor="#CCFFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_new_value"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_ask"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/txt_span1"
        android:textColor="#FFFFFF"
        android:background="#11000000"
        android:textColorHint="#FFB3B3B3"
        android:inputType="text"
        android:hint="Nhập giá trị mới" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_new_value"
        android:background="@drawable/button_radius"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="12sp"
        android:text="Update"/>

    <Button
        android:id="@+id/btn_close"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_update"
        android:layout_alignBottom="@+id/btn_update"
        android:layout_toRightOf="@+id/btn_update"
        android:background="@drawable/button_radius"
        android:layout_marginLeft="40dp"
        android:textSize="12sp"
        android:text="Close"/>

</RelativeLayout>